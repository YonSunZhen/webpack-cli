{
  "compilerOptions": {
    "module": "commonjs", // 指定生成哪个模块系统代码
    "target": "ES5", // 指定ECMAScript目标版本
    "allowJs": true, // 允许编译javascript文件
    "experimentalDecorators": true,
    "lib": [ // 编译过程中需要引入的库文件的列表
      "dom",
      "es5",
      "es6",
      "es7",
      "es2018",
      "es2015.promise"
    ]
  },
  "include": [
    "./src/app/*"
  ],
  "exclude": [
    "./node_modules",
    "**/*.spec.ts"
  ]
}